<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="nps_single_beam_sonar" params="namespace suffix parent_link topic *origin">

    <!-- joint to Sonar link -->
    <joint name="${namespace}_nps_single_beam_sonar${suffix}_joint" type="fixed">
      <parent link="${parent_link}" />
      <child link="${namespace}/nps_single_beam_sonar${suffix}_link" />
      <xacro:insert_block name="origin" />
    </joint>

  <!--
      raycount: number of actual rays used in gazebo
      rangeCount: number of range values made available to user
      If rayCount is less than rangeCount, it will interpolate.
  -->  
    <link name="${namespace}/nps_single_beam_sonar${suffix}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1" />
        <!-- Mark only - based on cylinder -->
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
      </inertial>
      <collision name="collision">
        <origin xyz="-0.08 0 0" rpy="0 1.5708 0"/>
        <geometry>
          <cylinder length="0.28" radius="0.07"/>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh filename="file://$(find nps_single_beam_sonar)/test/meshes/p900.dae"/>
        </geometry>
      </visual>
    </link>

  <gazebo reference="${namespace}/nps_single_beam_sonar${suffix}_link">

    <selfCollide>false</selfCollide>
 
    <sensor type="gpu_ray" name="ray_sensor">
      <always_on>true</always_on>
      <update_rate>15.0</update_rate>
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>3</samples>
            <resolution>1</resolution>            
            <min_angle>-0.1</min_angle>
            <max_angle>0.1</max_angle>                        
          </horizontal>        
          <vertical>            
            <samples>1</samples>
            <resolution>1</resolution>            
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>                        
          </vertical>          
        </scan>

        <range>
          <min>0.1</min>
          <max>10.0</max>
<!--          <resolution>0.01</resolution> -->
        </range>
      </ray>

      <plugin name="nps_gazebo_ros_single_beam_sonar_plugin" filename="libnps_gazebo_ros_gpu_single_beam_sonar_plugin.so">
        <robotNamespace>${namespace}</robotNamespace>
        <frameName>${namespace}/${topic}${suffix}_link</frameName>
        <topicName>${topic}${suffix}_sonar_range</topicName>
      </plugin>
    </sensor>
  </gazebo>
  </xacro:macro>
</robot>

